<Window x:Class="PACMAN.TimespanAnalysis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PACMAN"
        mc:Ignorable="d"
    Title="Timespan Analysis" Height="210" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1px" />
            <ColumnDefinition Width="1px" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10px" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="1" Margin="5,5,5,0" VerticalAlignment="Center">
            <telerik:RadComboBox x:Name="locationSelect">
                <!--<telerik:RadComboBoxItem IsSelected="True" Content="This Location"/>
                <telerik:RadComboBoxItem Content="Industrial (Hill Air Force Base)" />
                <telerik:RadComboBoxItem Content="Industrial/Agricultural (Wright Patt Air Force Base)" />
                <telerik:RadComboBoxItem Content="Marine (Key West Air Force Base)" />
                <telerik:RadComboBoxItem Content="Marine/Agricultural (Eglin Air Force Base)" />
                <telerik:RadComboBoxItem Content="Marine Sheltered (Hickam Air Force Base)" />
                <telerik:RadComboBoxItem Content="Rural (Tinker Air Force Base)" />
                <telerik:RadComboBoxItem Content="Rural/Arid (Luke Air Force Base)" />
                <telerik:RadComboBoxItem Content="Severe Marine (Guam Air Force Base)" />
                <telerik:RadComboBoxItem Content="Severe Marine (Singapore)" />-->
            </telerik:RadComboBox>
        </StackPanel>
        <telerik:Label x:Name="LocationLabel" Content="Select Location:" FontSize="12" Grid.Column="2" Grid.Row="0"
			                HorizontalAlignment="Right" FontFamily="Segoe UI"/>
        <telerik:Label x:Name="StartDateLabel" Content="Select Start Date:" FontSize="12" Grid.Column="2" Grid.Row="1"
					                HorizontalAlignment="Right" FontFamily="Segoe UI"/>
        <telerik:Label x:Name="EndDateLabel" Content="Select End Date:" FontSize="12" Grid.Column="2" Grid.Row="2"
					                HorizontalAlignment="Right" FontFamily="Segoe UI"/>
        <StackPanel Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="1" Margin="5,5,5,5" VerticalAlignment="Center" >
            <DatePicker x:Name="StartDate"></DatePicker>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1" Margin="5,5,5,0" VerticalAlignment="Center">
            <DatePicker x:Name="EndDate"></DatePicker>
        </StackPanel>
        <CheckBox FlowDirection="LeftToRight" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="EntireRangeCB" Checked="EntireRangeCB_Checked">
            <TextBlock FlowDirection="LeftToRight" Text="Use entire date range" />
        </CheckBox>
        <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="4" Margin="5,0,0,0" Width="200">
            <telerik:RadButton  Content="Submit" Click="Submit_Click" Height="25px" Width="80" Margin="5,0,5,0"/>
            <telerik:RadButton Content="Cancel" Click="Cancel_Click" Height="25px" Width="80" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
